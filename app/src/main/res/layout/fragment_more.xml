<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textSize="@dimen/top_menu_name_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/top_menu_bottom_margin"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.widget.Button
            android:id="@+id/moreNoticeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notice"
            android:textAlignment="textStart"
            android:background="@drawable/more_button_design"
            android:layout_margin="10dp"
            android:padding="@dimen/more_button_padding"
            android:textSize="20sp"
            android:drawableEnd="@drawable/arrow_back_ios"
            />
        <android.widget.Button
            android:id="@+id/moreLogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:background="@drawable/more_button_design"
            android:text="@string/logout"
            android:layout_margin="10dp"
            android:padding="@dimen/more_button_padding"
            android:textSize="20sp"
            android:drawableEnd="@drawable/arrow_back_ios"

            />

    </LinearLayout>
</LinearLayout>